{
    "name": "markdown-jira",
    "displayName": "markdown-jira",
    "description": "Translate Markdown to Jira Markdown or vice-versa",
    "version": "0.0.1",
    "publisher": "nothing",
    "engines": {
        "vscode": "^1.25.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.convertMarkdown",
        "onCommand:extension.convertJira"
    ],
    "main": "./extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.convertMarkdown",
                "title": "Convert Markdown to JIRA"
            },
            {
                "command": "extension.convertJira",
                "title": "Convert JIRA to Markdown"
            }
        ]
    },
    "scripts": {
        "preinstall": "npm install jira2md",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^7.0.43",
        "eslint": "^4.11.0",
        "jira2md": "^2.0.3",
        "typescript": "^2.6.1",
        "vscode": "^1.1.6"
    }
}
